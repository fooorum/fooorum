---
import Layout from "@layouts/Layout.astro";
import Stack from "@components/Stack.astro";
import { db, Forum } from "astro:db";

const forums = await db.select().from(Forum);
---

<Layout>
    <Stack>
        {forums.map((f) => <a href={`${Astro.url}/${f.id}`}>{f.name}</a>)}
    </Stack>
</Layout>
