---
import Layout from "@layouts/Layout.astro";
import Send from "@components/actions/Send.astro";
const { user } = Astro.locals;
if (!user) return Astro.redirect("/account/login");
---

<Layout title={"Forum erstellen"}>
  <form method="post" action="/api/forum/create">
    <input
      autofocus={true}
      name="name"
      required="true"
      placeholder="Name des Forums"
    />
    <input name="description" placeholder="Beschreibung" />
    <Send />
  </form>
</Layout>

<style lang="scss">
  form {
    display: flex;
    flex-direction: column;
    gap: 0.5em;
  }
</style>
