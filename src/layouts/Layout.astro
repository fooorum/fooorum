---
import Footer from "@components/Footer.astro";
import Meta from "@components/Head.astro";
import Header from "@components/Header.astro";

interface Props {
    title: string;
    description?: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html>
    <head>
        <Meta title={title} description={description} />
    </head>

    <body>
        <Header />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>
