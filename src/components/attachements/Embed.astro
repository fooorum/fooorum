---
import Image from "@components/attachements/Image.astro";
import Cover from "@components/links/Cover.astro";
import ogs from "open-graph-scraper";
import embeds from "@lib/caches/Embeds";

interface Props {
  url: string;
}
const { url } = Astro.props;

const res = await embeds.fetch(url);
---

<div class="embed">
  <a href={url}>{res?.ogTitle ?? url}<Cover /></a>
  {res?.ogDescription}
  {res?.ogImage?.length && <Image url={res.ogImage[0].url} />}
</div>

<style>
  .embed {
    display: flex;
    flex-direction: column;
    gap: 0.5em;
    position: relative;
    z-index: 1;
  }

  a {
    display: inline-block;
    width: 100%;
    text-wrap: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
</style>
