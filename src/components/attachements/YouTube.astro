---
import { getYouTubeEmbedUrl } from "@lib/youTube";

interface Props {
  url: string;
}
const { url } = Astro.props;

const embedUrl = await getYouTubeEmbedUrl(url);
---

<iframe src={embedUrl}> </iframe>

<style>
  iframe {
    position: relative;
    z-index: 1;

    width: 100%;
    aspect-ratio: 16 / 9;
    border: none;
    border-radius: 1em;
  }
</style>
