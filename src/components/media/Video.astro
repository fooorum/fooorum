---
interface Props {
  url: string;
  width: number | null;
  height: number | null;
}
const { url, width, height } = Astro.props;
const aspectRatio = width && height && width / height;
---

<video src={url} controls style={{ aspectRatio }}></video>

<style>
  video {
    position: relative;
    z-index: 1;

    object-fit: contain;
    max-width: 100%;
    max-height: 400px;
    border-radius: 1em;
  }
</style>
