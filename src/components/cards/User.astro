---
import Card from "./Card.astro";
import Link from "@components/links/User.astro";
import Cover from "@components/links/Cover.astro";

interface Props {
  userName: string;
  userId: number;
  userDescription: string | null;
  active?: boolean;
}

const { userName, userId, userDescription, active = false } = Astro.props;
---

<Card active={active}>
  <address slot="header">
    <Link id={userId}>{userName}{!active && <Cover />}</Link>
  </address>
  {userDescription}
</Card>

<style lang="scss">
  address {
    position: static;
  }
</style>
