---
import Card from "./Card.astro";
import Link from "@components/links/User.astro";
import Cover from "@components/links/Cover.astro";

interface Props {
  name: string;
  id: number;
  description: string | null;
  active?: boolean;
}

const { name, id, description, active = false } = Astro.props;
---

<Card active={active}>
  <address slot="header">
    <Link id={id}>{name}{!active && <Cover />}</Link>
  </address>
  {description}
</Card>

<style lang="scss">
  address {
    position: static;
  }
</style>
