---
import Card from "./Card.astro";
import User from "@components/links/User.astro";
import Cover from "@components/links/Cover.astro";

interface Props {
  userName: string;
  userId: number;
  userDescription: string | null;
}

const { userName, userId, userDescription } = Astro.props;
---

<Card>
  <address slot="header">
    <User id={userId}>{userName}<Cover /></User>
  </address>
  {userDescription}
</Card>
