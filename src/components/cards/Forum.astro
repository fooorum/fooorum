---
import Card from "./Card.astro";
import Forum from "@components/links/Forum.astro"
import Cover from "@components/links/Cover.astro"

interface Props {
  forumName: string;
  forumId: number;
  forumDescription: string | null;
}

const { forumName, forumId, forumDescription } = Astro.props;
---

<Card>
  <address slot="header">
    <Forum id={forumId}>{forumName}<Cover /></Forum>
  </address>
  {forumDescription}
</Card>
