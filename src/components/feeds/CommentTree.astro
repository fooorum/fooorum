---
import Stack from "@components/feeds/Stack.astro";
import Card from "@components/cards/Post.astro";
import Separator from "./Separator.astro";
import { eq, and, Post, ne, TRUE } from "astro:db";
import { selectPosts } from "@lib/db";

interface Props {
  parent: number;
}

const { parent } = Astro.props;
const { user } = Astro.locals;

const comments = await selectPosts({ userId: Astro.locals.user?.id }).where(
  and(eq(Post.parentId, parent), ne(Post.isDeleted, TRUE)),
);
---

<div class="comments">
  <Stack>
    {
      comments.map((comment) => [
        <Separator />,
        <Card {...comment} comments={undefined} />,
        <Astro.self parent={comment.postId} />,
      ])
    }
  </Stack>
</div>

<style lang="scss">
  .comments {
    border-left: solid 2px var(--accent);
    padding-left: 0.5em;
  }
</style>
