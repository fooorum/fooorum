---
const prefixes = {
    1: "👍🏿",
    [-1]: "👎🏿",
}

interface Props {
    postId: number;
    amount: number;
    score: keyof typeof prefixes;
}
const {postId, score, amount} = Astro.props;

const prefix = prefixes[score]
---

<form method="post" action={`/api/vote/${postId}/${score}`}>
    <button type="submit">
        {prefix} {amount}
    </button>
</form>
