---
import Card from "./Base.astro";
import Link from "@components/Link.astro";
interface Props {
    title: string | null;
    description: string;
    id: number;
    userName?: string;
    userId?: number;
    forumName?: string;
    forumId?: number;
}

const { title, description, id, userName, userId, forumName, forumId } =
    Astro.props;
---

<Card title={title ?? undefined} url={`/posts/${id}`}>
    <span slot="author">
        {userName && <Link href={`/users/${userId}`}>{userName}</Link>}
         {forumName && <>in <Link href={`/forums/${forumId}`}>{forumName}</Link></>}
    </span>
    {description}
</Card>
