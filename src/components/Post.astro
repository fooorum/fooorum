---
import Card from "./Card.astro";
import Vote from "./Vote.astro";
import Comments from "./Comments.astro";
import Link from "@components/Link.astro";

interface Props {
    title: string | null;
    description: string;
    id: number;
    userName?: string;
    userId?: number;
    forumName?: string;
    forumId?: number;
    upvotes: number;
    downvotes: number;
    comments?: number;
}

const {
    title,
    description,
    id,
    userName,
    userId,
    forumName,
    forumId,
    upvotes,
    downvotes,
    comments,
} = Astro.props;
---

<Card title={title ?? undefined} url={`/posts/${id}`}>
    <span slot="author">
        {userName && <Link href={`/users/${userId}`}>{userName}</Link>}
        {
            forumName && (
                <>
                    in <Link href={`/forums/${forumId}`}>{forumName}</Link>
                </>
            )
        }
    </span>
    {description}
    <Vote postId={id} score={1} amount={upvotes} slot="footer" />
    <Vote postId={id} score={-1} amount={downvotes} slot="footer" />
    {comments && <Comments postId={id} amount={comments} slot="footer" />}
</Card>
